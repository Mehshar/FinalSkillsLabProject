@model FinalSkillsLabProject.Common.Models.TrainingModel

@{
    ViewBag.Title = "Create Training";
}

<head>
    <meta name="viewport" content="width=device-width" />

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    @*https://codeseven.github.io/toastr/*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <script type="text/javascript" src="~/Scripts/CreateTrainingScript.js"></script>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Create Training</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group py-3">
            <label for="trainingName" class="control-label col-md-2 pb-2">Training Name</label>
            <div class="col-md-10">
                <input type="text" name="trainingName" id="trainingName" class="form-control" required />
            </div>
        </div>

        <div class="form-group py-3">
            <div class="col-md-10">
                <label for="description" class="form-label pb-2">Description</label>
                <textarea class="form-control" id="description" rows="7" required></textarea>
            </div>
        </div>

        <div class="form-group py-3">
            <label for="deadline" class="control-label col-md-2 pb-2">Deadline</label>
            <div class="col-md-10">
                @{
                    string minDate = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
                }
                <input type="datetime-local" name="deadline" id="deadline" class="form-control" min="@minDate" required />
            </div>
        </div>

        <div class="form-group py-3">
            <label for="capacity" class="control-label col-md-2 pb-2">Capacity</label>
            <div class="col-md-10">
                <input type="number" name="capacity" id="capacity" class="form-control" min="1" max="100" required />
            </div>
        </div>

        <div class="form-group pt-3">
            <label for="departmentDropdown" class="control-label col-md-2 pb-2">Priority Department</label>
        </div>
        <select class="form-select mb-3" id="departmentDropdown" required>
            <option value="-1">None</option>
            @foreach (var department in ViewBag.Departments)
            {
                <option value="@department.DepartmentId">@department.DepartmentName</option>
            }
        </select>

        <div class="form-group pt-3">
            <label for="prerequisite" class="control-label col-md-2 pb-2 fw-bold">Prerequisites</label>
        </div>
        @foreach (var prerequisite in ViewBag.Prerequisites)
        {
            <div class="form-check">
                <input class="form-check-input prerequisite-checkbox" type="checkbox" value="@prerequisite.PrerequisiteId" id="@prerequisite.PrerequisiteId" name="@prerequisite.PrerequisiteId">
                <label class="form-check-label" for="flexCheckChecked">@prerequisite.Description</label>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 py-3">
                <input type="submit" value="Create" id="btnSubmit" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Training")
</div>

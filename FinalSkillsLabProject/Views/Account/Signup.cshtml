@model FinalSkillsLabProject.Common.Models.SignUpModel

@{
    ViewBag.Title = "Signup";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Signup</title>

    <link rel="stylesheet" href="~/Content/SignupStyle.css" />

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    @*https://codeseven.github.io/toastr/*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

    <script type="text/javascript" src="~/Scripts/SignupScript.js"></script>
    <script type="text/javascript" src="~/Scripts/ManagerDropdownScript.js"></script>
    <script type="text/javascript" src="~/Scripts/PasswordVisibility.js"></script>
</head>
<body>
    <form name="SignupForm" id="SignupForm">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Sign Up</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group py-3">
                <label for="nic" class="control-label col-md-2 pb-2">NIC</label>
                <div class="col-md-10">
                    <input type="text" name="nic" id="nic" class="form-control" required />
                </div>
            </div>

            <div class="form-group py-3">
                <label for="firstName" class="control-label col-md-2 pb-2">First Name</label>
                <div class="col-md-10">
                    <input type="text" name="firstName" id="firstName" class="form-control" required />
                </div>
            </div>

            <div class="form-group py-3">
                <label for="lastName" class="control-label col-md-2 pb-2">Last Name</label>
                <div class="col-md-10">
                    <input type="text" name="lastName" id="lastName" class="form-control" required />
                </div>
            </div>

            <div class="form-group py-3">
                <label for="email" class="control-label col-md-2 pb-2">Email</label>
                <div class="col-md-10">
                    <input type="email" name="email" id="email" class="form-control" required />
                </div>
            </div>

            <div class="form-group py-3">
                <label for="mobileNum" class="control-label col-md-2 pb-2">Mobile Number</label>
                <div class="col-md-10">
                    <input type="text" name="mobileNum" id="mobileNum" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <label for="departmentDropdown" class="control-label col-md-2 pb-2">Department</label>
            </div>
            <select class="form-select mb-3" id="departmentDropdown" required>
                <option disabled selected hidden>Choose your department...</option>
                @foreach (var department in ViewBag.Departments)
                {
                    <option value="@department.DepartmentId">@department.DepartmentName</option>
                }
            </select>

            <div class="form-group">
                <label for="managerDropdown" class="control-label col-md-2 py-2">Manager</label>
            </div>
            <select class="form-select mb-3" id="managerDropdown" disabled required>
                <option disabled selected hidden>Choose your manager...</option>
            </select>

            <div class="form-group py-3">
                <label for="username" class="control-label col-md-2 pb-2">Username</label>
                <div class="col-md-10">
                    <input type="text" name="username" id="username" class="form-control" required />
                </div>
            </div>

            <div class="form-group py-3">
                <label for="password" class="control-label col-md-2 pb-2">Password</label>
                <div class="col-md-10">
                    <input type="password" name="password" id="password" class="form-control" required />
                </div>
            </div>

            <div class="form-checkbox">
                <input type="checkbox" id="passwordCheckbox" onclick="togglePasswordVisibility()" />
                <span>Show Password</span>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sign Up" id="btnSignup" class="btn btn-primary my-3" />
                </div>
            </div>
        </div>
    </form>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

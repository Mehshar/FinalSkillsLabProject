@model FinalSkillsLabProject.Common.Models.SignUpModel

@{
    ViewBag.Title = "Signup";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/Content/SignupLoginStyle.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    @*https://codeseven.github.io/toastr/*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

    <script type="text/javascript" src="~/Scripts/SignupScript.js"></script>
    <script type="text/javascript" src="~/Scripts/ManagerDropdownScript.js"></script>
    <script type="text/javascript" src="~/Scripts/PasswordVisibility.js"></script>
</head>
<body>
    <div class="title-bar">
        <p>
            <a href="/Home/Index" class="text-decoration-none" id="title-text">SkillsHub</a>
        </p>
    </div>

    <div class="container bg-transparent mt-4 h-100">
        <div class="row justify-content-center align-items-center flex-wrap content-container">
            <div class="col-lg-5 col-md-6 bg-transparent justify-content-center align-items-center d-flex pe-0 outer-content">
                <div class="inner-content bg-opacity-25 px-5 pb-5 pt-4 rounded bg-white w-100">
                    <h2 class="text-center pt-2 pb-2">Sign Up</h2>
                    <span class="d-flex align-content-center justify-content-center mt-3 mb-3">Already have an account? <a href="/Account/Login" class="text-decoration-none fw-bold ms-1" id="logInText">Log In</a></span>

                    <div>
                        <form name="SignupForm" id="SignupForm">
                            @Html.AntiForgeryToken()

                            <div class="input-field rounded-pill bg-white text-center mx-auto">
                                <i class="fa-regular fa-address-card"></i>
                                @*<i class="fa-solid fa-id-card"></i>*@
                                <input type="text" name="nic" id="nic" placeholder="NIC" required />
                            </div>

                            <div class="input-field rounded-pill bg-white text-center mx-auto">
                                <i class="fa-regular fa-user"></i>
                                <input type="text" name="firstName" id="firstName" placeholder="First Name" required />
                            </div>

                            <div class="input-field rounded-pill bg-white text-center mx-auto">
                                <i class="fa fa-user"></i>
                                <input type="text" name="lastName" id="lastName" placeholder="Last Name" required />
                            </div>

                            <div class="input-field rounded-pill bg-white text-center mx-auto">
                                <i class="fa-solid fa-at"></i>
                                <input type="email" name="email" id="email" placeholder="Email" required />
                            </div>

                            <div class="input-field rounded-pill bg-white text-center mx-auto">
                                <i class="fa-solid fa-mobile-screen-button"></i>
                                <input type="text" name="mobileNum" id="mobileNum" placeholder="Mobile Number" required />
                            </div>

                            <div class="form-group d-none">
                                <label for="departmentDropdown" class="control-label col-md-2 pb-2">Department</label>
                            </div>
                            <select class="form-select rounded-pill px-4 py-3 mx-auto dropdown-text custom-select" id="departmentDropdown" required>
                                <option disabled selected hidden>Choose your department...</option>
                                @foreach (var department in ViewBag.Departments)
                                {
                                    <option value="@department.DepartmentId">@department.DepartmentName</option>
                                }
                            </select>

                            <div class="form-group d-none">
                                <label for="managerDropdown" class="control-label col-md-2 py-2">Manager</label>
                            </div>
                            <select class="form-select rounded-pill px-4 py-3 mx-auto mt-2 dropdown-text custom-select" id="managerDropdown" disabled required>
                                <option disabled selected hidden>Choose your manager...</option>
                            </select>

                            <div class="input-field rounded-pill bg-white text-center mx-auto">
                                <i class="fa-solid fa-circle-user"></i>
                                <input type="text" name="username" id="username" placeholder="Username" required />
                            </div>

                            <div class="input-field rounded-pill bg-white text-center mx-auto">
                                <i class="fa fa-lock"></i>
                                <input type="password" name="password" id="password" placeholder="Password" required />
                            </div>

                            <div class="form-checkbox ps-4 ms-2">
                                <input type="checkbox" id="passwordCheckbox" class="form-check-input" onclick="togglePasswordVisibility()" />
                                <span>Show Password</span>
                            </div>

                            <div class="form-button d-flex justify-content-center">
                                <button type="submit" id="btnSignup">SIGN UP</button>
                            </div>

                            <h4 class="hr-line px-5"> OR </h4>

                            <div class="text-center pt-2 pb-3"><span>Sign in with social platforms</span></div>

                            <div class="social-media">
                                <a href="#" class="social-icon">
                                    <i class="fa-brands fa-facebook-f"></i>
                                </a>

                                <a href="#" class="social-icon">
                                    <i class="fa-brands fa-twitter"></i>
                                </a>

                                <a href="#" class="social-icon">
                                    <i class="fa-brands fa-google"></i>
                                </a>

                                <a href="#" class="social-icon">
                                    <i class="fa-brands fa-linkedin-in"></i>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-md-6 bg-white py-5 px-3 left-column rounded-end">
                <div>
                    <img src="~/Content/Images/Signup.png" class="img-fluid" alt="Image" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


@model List<FinalSkillsLabProject.Common.Models.PrerequisiteMaterialViewModel>

<head>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    @*https://codeseven.github.io/toastr/*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

    <script type="text/javascript" src="~/Scripts/NewTabScript.js"></script>
    <script type="text/javascript" src="~/Scripts/EnrollmentApprovalScript.js"></script>
    <script type="text/javascript" src="~/Scripts/EnrollmentRejectionScript.js"></script>

    <style>
        textarea {
            max-width: 100% !important;
        }

        .input-group.required .input-group-text::after {
            content: "*";
            color: red;
        }
    </style>
</head>

<body>
    @foreach (var prerequisiteMaterial in Model)
    {
        <div class="card mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                @prerequisiteMaterial.Description

                <button type="button" class="btn btn-outline-primary rounded-2" onclick="openInNewTab('@prerequisiteMaterial.PrerequisiteMaterialURL')" data-enrollmentid="@prerequisiteMaterial.EnrollmentId" data-enrollmentstatus="@prerequisiteMaterial.EnrollmentStatus" data-toggle="tooltip" title="View Attachment">
                    <span class="rounded-5 d-flex align-items-center justify-content-center">
                        <i class="fa-regular fa-file-lines"></i>
                    </span>
                </button>
            </div>
        </div>
    }
    <div class="input-group mb-3 d-flex d-none declineReason required">
        <span class="input-group-text">Reason for Decline</span>
        <textarea class="form-control w-min-100 declineReasontextarea" aria-label="Reason for Decline"></textarea>
    </div>
    <div class="flex-nowrap d-flex justify-content-between align-items-center">
        <button type="button" class="btn btn-outline-success rounded-2 ms-auto me-3 w-75 btnApprove" data-toggle="tooltip" title="Approve">
            <span class="rounded-5 d-flex align-items-center justify-content-center">
                <i class="fa-solid fa-check"></i>
            </span>
        </button>
        <button type="button" class="btn btn-outline-danger rounded-2 w-25 btnReject" data-toggle="tooltip" title="Reject">
            <span class="rounded-5 d-flex align-items-center justify-content-center">
                <i class="fa-solid fa-x"></i>
            </span>
        </button>
    </div>
</body>
